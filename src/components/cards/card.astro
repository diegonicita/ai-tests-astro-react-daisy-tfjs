---
const { title, description, image, price } = Astro.props
---

<div class="card text-sm w-full lg:w-70 bg-base-100 shadow-2xl pt-4">
  <figure class="pt-4 border-t-gray border">
    <img src={"https://mercado.webapp.ar/images/" + image} alt="Shoes" class="rounded-xl w-full" />
  </figure>
  <div class="card-body items-center text-center">
    <h2 class="card-title mt-0 pt-0">{title}</h2>
    <div class="">{description}</div>
    <div>${price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".")}</div>
    <div class="mt-4 card-actions">
      <button class="btn btn-primary">Comprar</button>
    </div>
  </div>
</div>
