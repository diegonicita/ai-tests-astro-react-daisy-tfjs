---
import BaseLayout from '../layouts/BaseLayout.astro'
import { ToxicityClassifier } from '../components/toxicityClassifier.jsx'
import { GradientTitle } from '../components/gradientTitle'
---

<BaseLayout title="Toxicity" toxicity={true}>
  <div class="container mx-auto">
    <div class="grid grid-cols-1 grid-rows-1 items-start min-h-full p-8">
      <div class="flex flex-col">
        <GradientTitle
          withColor={'Toxicity Classifier'}
          withoutColor={'Test'}
        />
        <ToxicityClassifier client:load />
      </div>
    </div>
  </div>
</BaseLayout>
