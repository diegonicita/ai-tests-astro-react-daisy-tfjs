---
import BaseLayout from '../layouts/BaseLayout.astro'
import { ToxicityClassifier } from '../components/toxicityClassifier.jsx'
import Navbar from '../components/navbar.astro'
---

<BaseLayout title="Toxicity" toxicity={true}>
  <div class="container mx-auto">
    <Navbar />
  </div>
  <div class="container mx-auto bg-base-200">
    <div class="grid grid-cols-1 grid-rows-1 place-items-center min-h-screen">
      <ToxicityClassifier client:load />
    </div>
  </div>
</BaseLayout>
