---
import '../global.css'
const { title, toxicity } = Astro.props
import Navbar from '../components/navbar/navbar.astro'
import Footer from '../components/footer.astro'
---

<script is:inline>
  // ☝️ This script prevent the FART effect.
  if (localStorage.getItem("theme") === null) {
    document.documentElement.setAttribute("data-theme", "light");
  } else
  document.documentElement.setAttribute("data-theme",localStorage.getItem("theme"));
  // "theme" LocalStorage value is set by the package to remember user preference.
  // The value is checked and applyed before rendering anything.
</script>

<html lang="en" class="bg-base-100" data-theme="cupcake"> 
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    {
      toxicity && (
        <>
          <script
            is:inline
            src="https://cdnjs.cloudflare.com/ajax/libs/tensorflow/2.7.0/tf.min.js"
          />
          <script
            is:inline
            src="https://cdn.jsdelivr.net/npm/@tensorflow-models/toxicity@1.2.2"
          />
        </>
      )
    }
  </head>
  <body tabindex="0" class="font-mono">
    <div>
      <Navbar />
      <slot />
      <Footer />
    </div>
  </body>
</html>
