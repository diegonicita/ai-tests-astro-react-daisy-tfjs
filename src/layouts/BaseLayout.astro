---
import '../global.css'
const { title, toxicity } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    {
      toxicity && (
        <>
          <script
            is:inline
            src="https://cdnjs.cloudflare.com/ajax/libs/tensorflow/2.7.0/tf.min.js"
          />
          <script
            is:inline
            src="https://cdn.jsdelivr.net/npm/@tensorflow-models/toxicity@1.2.2"
          />
        </>
      )
    }
  </head>
  <body>
    <slot />
  </body>
</html>
