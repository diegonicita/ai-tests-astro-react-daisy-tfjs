---
import '../global.css'
const { title, toxicity } = Astro.props
import Navbar from '../components/navbar.astro'
import Footer from '../components/footer.astro'
---

<html lang="en" class="bg-neutral"> 
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    {
      toxicity && (
        <>
          <script
            is:inline
            src="https://cdnjs.cloudflare.com/ajax/libs/tensorflow/2.7.0/tf.min.js"
          />
          <script
            is:inline
            src="https://cdn.jsdelivr.net/npm/@tensorflow-models/toxicity@1.2.2"
          />
        </>
      )
    }
  </head>
  <body>
    <div>
      <Navbar />
      <slot />
      <Footer />
    </div>
  </body>
</html>
